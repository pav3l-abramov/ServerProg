@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<div style="display: flex; justify-content: center; align-items: center;">
    <form method="post">
        <h2>SIGN UP</h2>
        <div class="email-form">
            <label for="email">Email:</label>
            <input type="email" id="email" name="Email" asp-for="Input.Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="pass-form">
            <label for="password">Password:</label>
            <input type="password" id="password" name="Password" asp-for="Input.Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="pass-form">
            <label for="confirmPassword">Confirm Password:</label>
            <input type="password" id="confirmPassword" name="ConfirmPassword" asp-for="Input.ConfirmPassword" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button class="btn" type="submit">Sign up</button>
    </form>
</div>
